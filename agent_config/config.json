{
  "name": "SolanaDevAssistant",
  "description": "Solana Development Assistant",
  "default_provider": "OpenAI",
  "settings": {
    "temperature": 0.7,
    "context_window": 4096,
    "memory_window": 10000
  },
  "features": {
    "code_assistance": {
      "enabled": true,
      "max_code_size": 10000,
      "review_timeout": 300
    },
    "document_retrieval": {
      "enabled": true,
      "cache_ttl": 86400,
      "max_results": 10
    },
    "toolchain_support": {
      "enabled": true,
      "command_timeout": 300,
      "max_concurrent_ops": 5
    }
  },
  "security": {
    "code_review_required": true,
    "keypair_encryption": true,
    "deployment_approval": true,
    "sensitive_data_handling": {
      "encryption": true,
      "secure_storage": true,
      "access_control": true
    }
  },
  "performance": {
    "response_optimization": {
      "cache_enabled": true,
      "cache_ttl": 3600,
      "parallel_execution": true
    },
    "resource_management": {
      "max_memory": "1GB",
      "cleanup_interval": 3600,
      "max_concurrent_tasks": 5
    }
  }
}
